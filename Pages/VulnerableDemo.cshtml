@page "/vulnerable-demo"
@model SafeVault.Pages.VulnerableDemoModel
@{
    ViewData["Title"] = "Vulnerable Demo - Activity 3";
}

<div class="alert alert-danger text-center mb-4" role="alert">
    <h4 class="alert-heading">‚ö†Ô∏è INTENTIONALLY VULNERABLE PAGE ‚ö†Ô∏è</h4>
    <p class="mb-0">This page contains security vulnerabilities for Activity 3 educational demonstration only.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">üîì Vulnerable User Form</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <!-- VULNERABILITY 1: Raw HTML output without encoding -->
                            @Html.Raw(Model.ErrorMessage)
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            <!-- VULNERABILITY 2: User input displayed without encoding -->
                            Welcome back, @Html.Raw(Model.UserInput)! Your bio: @Html.Raw(Model.UserBio)
                        </div>
                    }

                    <!-- VULNERABILITY 3: No anti-forgery token -->
                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" name="username" value="@Model.Username">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email">
                        </div>

                        <div class="mb-3">
                            <label for="bio" class="form-label">Bio (HTML allowed):</label>
                            <textarea class="form-control" id="bio" name="bio" rows="3">@Model.Bio</textarea>
                            <small class="form-text text-muted">You can use HTML tags in your bio!</small>
                        </div>

                        <!-- VULNERABILITY 4: Hidden field that can be manipulated -->
                        <input type="hidden" name="isAdmin" value="@Model.IsAdmin" />

                        <div class="mb-3">
                            <label for="searchTerm" class="form-label">Search Users:</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm">
                        </div>

                        <button type="submit" name="action" value="register" class="btn btn-danger me-2">Register User</button>
                        <button type="submit" name="action" value="search" class="btn btn-warning me-2">Search Users</button>
                        <button type="submit" name="action" value="test" class="btn btn-secondary">Test XSS</button>
                    </form>

                    @if (Model.SearchResults != null && Model.SearchResults.Any())
                    {
                        <div class="mt-4">
                            <h4>Search Results:</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model.SearchResults)
                                        {
                                            <tr>
                                                <td>@user.Id</td>
                                                <!-- VULNERABILITY 5: User data displayed without encoding -->
                                                <td>@Html.Raw(user.Username)</td>
                                                <td>@Html.Raw(user.Email)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">üö® Identified Vulnerabilities</h4>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-danger">
                            <strong>XSS Vulnerability</strong><br>
                            <small>Raw HTML output without encoding</small>
                        </div>
                        <div class="list-group-item list-group-item-danger">
                            <strong>CSRF Vulnerability</strong><br>
                            <small>No anti-forgery token protection</small>
                        </div>
                        <div class="list-group-item list-group-item-danger">
                            <strong>SQL Injection Risk</strong><br>
                            <small>Unsafe database queries</small>
                        </div>
                        <div class="list-group-item list-group-item-danger">
                            <strong>Input Validation</strong><br>
                            <small>No server-side validation</small>
                        </div>
                        <div class="list-group-item list-group-item-danger">
                            <strong>Information Disclosure</strong><br>
                            <small>Detailed error messages</small>
                        </div>
                        <div class="list-group-item list-group-item-danger">
                            <strong>Parameter Tampering</strong><br>
                            <small>Hidden admin field manipulation</small>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h5>Test Payloads:</h5>
                        <div class="small">
                            <strong>XSS Test:</strong><br>
                            <code>&lt;script&gt;alert('XSS')&lt;/script&gt;</code><br><br>
                            
                            <strong>SQL Injection Test:</strong><br>
                            <code>'; DROP TABLE Users; --</code><br><br>
                            
                            <strong>HTML Injection:</strong><br>
                            <code>&lt;h1 style="color:red"&gt;Hacked!&lt;/h1&gt;</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
